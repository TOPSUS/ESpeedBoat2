<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F1F1F1"
    tools:context=".MyFragment.MainActivityFragment.PemesananJadwalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:background="@color/Blue_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp"
        android:clipChildren="false"
        android:scrollbarSize="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/panelinputpemesananheader"
            android:paddingHorizontal="20dp"
            android:paddingTop="6dp"
            android:text="PENCARIAN JADWAL"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:background="@drawable/panelinputpemesananjadwal"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabelText="Dari :"
                app:met_baseColor="@color/black"
                app:met_errorColor="@android:color/holo_red_dark"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/Blue_primary"
                app:met_floatingLabelAlwaysShown="true"
                app:met_underlineColor="@color/Blue_primary"
                tools:ignore="HardcodedText" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabelText="Dari :"
                app:met_baseColor="@color/black"
                app:met_errorColor="@android:color/holo_red_dark"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/Blue_primary"
                app:met_floatingLabelAlwaysShown="true"
                app:met_underlineColor="@color/Blue_primary"
                tools:ignore="HardcodedText" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabelText="Dari :"
                app:met_baseColor="@color/black"
                app:met_errorColor="@android:color/holo_red_dark"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/Blue_primary"
                app:met_floatingLabelAlwaysShown="true"
                app:met_underlineColor="@color/Blue_primary"
                tools:ignore="HardcodedText" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabelText="Dari :"
                app:met_baseColor="@color/black"
                app:met_errorColor="@android:color/holo_red_dark"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/Blue_primary"
                app:met_floatingLabelAlwaysShown="true"
                app:met_underlineColor="@color/Blue_primary"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>