<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingBottom="10dp">
        <androidx.cardview.widget.CardView
            android:layout_margin="2dp"
            android:id="@+id/cardViewUnpaidTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:elevation="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingHorizontal="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvJenisKapalUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feri 001"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvTanggalUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rabu, 13 Maret 2021"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvHargaUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 50.000"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_gravity="right"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ededed"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_boat"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="15dp">

                        <TextView
                            android:id="@+id/tvAsalUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sanur"
                            android:textColor="@color/black"
                            android:textSize="17dp" />
                        <TextView
                            android:id="@+id/tvWaktuAsalUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13:30"
                            android:gravity="bottom"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_arrowtujuan"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="15dp">
                        <TextView
                            android:id="@+id/tvTujuanUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanjung Benoa"
                            android:textSize="17dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tvWaktuTujuanUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13:30"
                            android:gravity="bottom"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <RatingBar
                            android:id="@+id/simpleRatingBarReview"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:progressTint="@color/Rating_Yellow"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:rating="5" /> <!-- default rating-->
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btnNilaiKapal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Nilai"
                            android:gravity="center"
                            android:textAllCaps="false"
                            android:backgroundTint="#ff6700"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="10dp"
                            />
                    </LinearLayout>
                </LinearLayout>

<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:orientation="horizontal">-->
<!--                    <TextView-->
<!--                        android:id="@+id/tvStatusBayar"-->
<!--                        android:layout_margin="15dp"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Belum Dibayar"-->
<!--                        android:textStyle="bold"-->
<!--                        android:textColor="@color/Danger_Red"/>-->
<!--                </LinearLayout>-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>