<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootlayoutRelativeRegisterActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:scrollbarSize="0dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".LoginActivity">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/header_login_2" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-60dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="REGISTER"
                        android:textAlignment="center"
                        android:textColor="@color/Blue_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="HardcodedText" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/metRegisterActivityNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:importantForAutofill="no"
                        android:textSize="14sp"
                        android:layout_marginEnd="20dp"
                        android:hint="Nama Lengkap"
                        android:inputType="text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        app:met_baseColor="@color/black"
                        app:met_errorColor="@android:color/holo_red_dark"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelText="Nama Lengkap"
                        app:met_primaryColor="@color/Blue_primary"
                        tools:ignore="HardcodedText" />


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/metRegisterActivityEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:importantForAutofill="no"
                        android:textSize="14sp"
                        android:layout_marginEnd="20dp"
                        android:hint="E-mail"
                        android:inputType="textEmailAddress"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/metRegisterActivityNama"
                        app:met_baseColor="@color/black"
                        app:met_errorColor="@android:color/holo_red_dark"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelText="E-mail"
                        app:met_primaryColor="@color/Blue_primary"
                        tools:ignore="HardcodedText" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/metRegisterActivityNohp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textSize="14sp"
                        android:layout_marginEnd="20dp"
                        android:importantForAutofill="no"
                        android:hint="No HP Aktif"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/metRegisterActivityEmail"
                        app:met_baseColor="@color/black"
                        app:met_errorColor="@android:color/holo_red_dark"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelText="No HP Aktif"
                        app:met_primaryColor="@color/Blue_primary"
                        tools:ignore="HardcodedText" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/metRegisterActivityAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="14sp"
                        android:hint="Alamat"
                        android:inputType="text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/metRegisterActivityNohp"
                        app:met_baseColor="@color/black"
                        app:met_errorColor="@android:color/holo_red_dark"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelText="Alamat"
                        app:met_primaryColor="@color/Blue_primary"
                        tools:ignore="HardcodedText" />


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/metRegisterActivityPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="14sp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/metRegisterActivityAlamat"
                        app:met_baseColor="@color/black"
                        app:met_errorColor="@android:color/holo_red_dark"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelText="Password"
                        app:met_primaryColor="@color/Blue_primary"
                        tools:ignore="HardcodedText" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/metRegisterActivityConfirmpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="14sp"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/metRegisterActivityPassword"
                        app:met_baseColor="@color/black"
                        app:met_errorColor="@android:color/holo_red_dark"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelText="Confirm Password"
                        app:met_primaryColor="@color/Blue_primary"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/dropdownRegisterActivityJenisKelamin"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Jenis Kelamin"
                        android:textSize="14sp"
                        android:backgroundTint="@color/white"
                        android:orientation="horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/metRegisterActivityConfirmpassword"
                        tools:ignore="HardcodedText,RtlSymmetry">

                        <AutoCompleteTextView
                            android:id="@+id/filled_exposed_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:textSize="14sp"
                            android:inputType="none"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                        android:id="@+id/btnRegisterActivityDaftar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/homelayananbutton"
                        android:text="MASUK"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dropdownRegisterActivityJenisKelamin"
                        app:spinning_bar_color="#FFF"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp"
                        tools:ignore="HardcodedText" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>