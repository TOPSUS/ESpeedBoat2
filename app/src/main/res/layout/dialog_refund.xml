<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formulir Pembatalan Pesanan"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="20dp"
        android:paddingLeft="7sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomor Rekening"
        android:paddingBottom="5dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:paddingLeft="7sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contoh: "
            android:paddingBottom="5dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:paddingLeft="7sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="012"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345678910"
            android:paddingBottom="5dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRekeningRefund"
            android:textSize="15dp"
            android:hint="Masukkan nomor rekening beserta kode bank"
            android:padding="12sp"
            android:gravity="top"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittext_bg"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alasan Pembatalan"
        android:paddingBottom="5dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:paddingLeft="7sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etAlasanRefund"
            android:hint="Masukkan alasan pembatalan"
            android:padding="12sp"
            android:lines="4"
            android:textSize="15dp"
            android:gravity="top"
            android:background="@drawable/edittext_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnBatalTukar"
                android:text="Batal"
                android:textColor="@color/black"
                android:backgroundTint="@color/lightgrey"
                android:layout_gravity="right"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnRefundFix"
                android:text="Refund"
                android:backgroundTint="@color/Danger_Red"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>