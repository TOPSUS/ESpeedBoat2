<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingBottom="15dp">
        <androidx.cardview.widget.CardView
            android:layout_margin="2dp"
            android:id="@+id/cardViewUnpaidTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:elevation="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingHorizontal="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tvTanggalUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rabu, 13 Maret 2021"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvHargaUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 50.000"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_gravity="right"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ededed"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_boat"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="15dp">
                        <TextView
                            android:id="@+id/tvAsalUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sanur"
                            android:textSize="18dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tvWaktuAsalUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13:30"
                            android:gravity="bottom"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_arrowtujuan"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="15dp">
                        <TextView
                            android:id="@+id/tvTujuanUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanjung Benoa"
                            android:textSize="18dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tvWaktuTujuanUnpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13:30"
                            android:gravity="bottom"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_margin="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Belum Dibayar"
                        android:textStyle="bold"
                        android:textColor="#FF0000"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>